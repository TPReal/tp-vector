{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint",
      "type": "shell",
      "command": [
        "deno",
        "lint"
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
      },
      "problemMatcher": ["$deno"],
    },
    {
      "label": "Type-check",
      "type": "shell",
      "command": [
        "deno",
        "check"
        "src/**/*.ts",
        "test/**/*.ts",
      ],
      "presentation": {
        "echo": true,
        "reveal": "silent",
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
      },
      "group": {
        "kind": "build",
      },
      "problemMatcher": ["$deno"],
    },
  ],
}
