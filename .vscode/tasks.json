{
  "version": "2.0.0",
  "tasks": [

    {
      "label": "Lint",
      "type": "shell",
      "command": [
        "deno",
        "lint"
      ],
      "problemMatcher": ["$deno"],
      "presentation": {
        "focus": false,
        "panel": "dedicated",
        "showReuseMessage": false,
      },
    },

    {
      "label": "Type-check",
      "type": "shell",
      "command": [
        "deno",
        "check"
        "src/**/*.ts",
      ],
      "group": {
        "kind": "build",
      },
      "problemMatcher": ["$deno"],
      "presentation": {
        "focus": false,
        "panel": "dedicated",
      },
    },

    {
      "label": "Viewer",
      "detail": "Build and serve the Viewer app",
      "type": "shell",
      "command": [
        "esbuild",
        "src/viewer/viewer.ts"
        "--watch",
        "--bundle",
        "--format=esm",
        "--sourcemap",
        "--outdir=src/viewer/static",
        "--serve=127.0.0.1:4327",
        "--servedir=src/viewer/static",
        "--charset=utf8",
        "--out-extension:.js=.mjs",
        // Loaders for assets (see src/assets.ts for information):
        "--loader:.jpg=file",
        "--loader:.png=file",
        "--loader:.svg=file",
        "--loader:.woff2=file",
      ],
      "isBackground": true,
      "group": {
        "kind": "build",
        "isDefault": true,
      },
      "problemMatcher": [],
      "presentation": {
        "focus": false,
        "panel": "dedicated",
      },
    },

  ],
}
