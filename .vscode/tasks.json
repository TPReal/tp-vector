{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Lint",
      "type": "shell",
      "command": [
        "deno",
        "lint"
      ],
      "problemMatcher": ["$deno"],
    },
    {
      "label": "Type-check",
      "type": "shell",
      "command": [
        "deno",
        "check"
        "src/**/*.ts",
        "test/**/*.ts",
      ],
      "group": {
        "kind": "build",
      },
      "problemMatcher": ["$deno"],
    },
  ],
}
